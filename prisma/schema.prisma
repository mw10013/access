generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AccessPoint {
  id                Int       @id @default(autoincrement())
  name              String
  description       String    @default("")
  accessUsers       AccessUser[]
  heartbeatAt       DateTime?
  cachedConfig      AccessPointCachedConfig?
  codes             AccessPointCode[]
}

model AccessUser {
  id                Int       @id @default(autoincrement())
  name              String
  description       String    @default("") 
  code              String    @default("")
  enabled           Boolean   @default(true)
  accessPoints      AccessPoint[] 
}

model AccessPointCode {
  id                Int         @id @default(autoincrement())
  name              String      @default("")
  code              String      @default("")
  enabled           Boolean     @default(false)
  accessPoint       AccessPoint @relation(fields: [accessPointId], references: [id])
  accessPointId     Int     
}

model AccessPointCachedConfig {
  id                Int         @id @default(autoincrement())
  codes             String      @default("[]") // json array of strings
  accessPoint       AccessPoint @relation(fields: [accessPointId], references: [id])
  accessPointId     Int         @unique
  cachedAt          DateTime    @updatedAt
}
