generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AccessPoint {
  id                Int       @id @default(autoincrement())
  // publicKey         String    @unique
  codes             AccessPointCode[]
  accessCheckPolicy String    @default("cloud-only")
  cachedConfig      AccessPointCachedConfig?
  heartbeatAt       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model AccessPointCode {
  id                Int         @id @default(autoincrement())
  name              String      @default("")
  code              String      @default("")
  enabled           Boolean     @default(false)
  accessPoint       AccessPoint @relation(fields: [accessPointId], references: [id])
  accessPointId     Int     
}

model AccessPointCachedConfig {
  id                Int         @id @default(autoincrement())
  codes             String      @default("[]") // json array of strings
  accessCheckPolicy String  
  accessPoint       AccessPoint @relation(fields: [accessPointId], references: [id])
  accessPointId     Int         @unique
  cachedAt          DateTime    @updatedAt
}
