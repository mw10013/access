generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AccessPoint {
  id            Int       @id @default(autoincrement())
  key           String    @unique
  code          String    @default("")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  heartbeatAt   DateTime?
  heartbeats    Int       @default(0)
  cachedConfig  AccessPointCachedConfig?
}

model AccessPointCachedConfig {
  id            Int       @id @default(autoincrement())
  code          String    @default("")
  accessPoint   AccessPoint @relation(fields: [accessPointId], references: [id])
  accessPointId Int       @unique
  cachedAt      DateTime  @updatedAt

}
