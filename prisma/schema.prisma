generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AccessPoint {
  id                Int       @id @default(autoincrement())
  key               String    @unique
  code              String    @default("")
  accessCheckPolicy String    @default("manager-only")
  cachedConfig      AccessPointCachedConfig?
  heartbeatAt       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model AccessPointCachedConfig {
  id                Int       @id @default(autoincrement())
  code              String    @default("")
  accessCheckPolicy String  
  accessPoint       AccessPoint @relation(fields: [accessPointId], references: [id])
  accessPointId     Int       @unique
  cachedAt          DateTime  @updatedAt
}
